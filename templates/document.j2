{% extends "templates/partials/base.j2" %}
{% block content %}
<div class="container document">
    <h1 class="text-center p-3">
        {% with parent_page = "documents" %}
        {% include "templates/partials/link_to_top.j2" %}
        {% endwith %}
        {{ object.shelfmark }}
    </h1>
    <div class="row">
        <div class="col">
            <h2><i class="bi bi-geo-alt"></i> Location</h2>
            <dl>
                {% if object.district %}
                <dt>District</dt>
                {% for x in object.district %}
                <dd class="ms-5"><a href="district__{{ x.id }}.html">{{ x.value }}</a></dd>
                {% endfor %}
                {% endif %}

                {% if object.neighbourhood %}
                <dt><i>Mahalle</i></dt>
                {% for x in object.neighbourhood %}
                <dd class="ms-5"><a href="neighbourhood__{{ x.id }}.html">{{ x.value }}</a></dd>
                {% endfor %}
                {% endif %}

                {% if object.karye %}
                <dt><i>Karye</i></dt>
                {% for x in object.karye %}
                <dd class="ms-5"><a href="karye__{{ x.id }}.html"></a>{{ x.value }}</dd>
                {% endfor %}
                {% endif %}

                {% if object.nahiye %}
                <dt><i>Nahiye</i></dt>
                {% for x in object.nahiye %}
                <dd class="ms-5"><a href="nahiye__{{ x.id }}.html"></a>{{ x.value }}</dd>
                {% endfor %}
                {% endif %}

                {% if object.quarter %}
                <dt>Quarter</dt>
                {% for x in object.quarter %}
                <dd class="ms-5"><a href="quarter__{{ x.id }}.html"></a>{{ x.value }}</dd>
                {% endfor %}
                {% endif %}

                {% if object.address %}
                <dt>Address</dt>
                {% for x in object.address %}
                <dd class="ms-5"><a href="address__{{ x.id }}.html"></a>{{ x.value }}</dd>
                {% endfor %}
                {% endif %}
            </dl>


            <h2><i class="bi bi-person"></i> Bakkal/Grocer</h2>
            {% for x in object.main_person %}
            <dl>
                <dt>Name</dt>
                <dd class="ms-5"><a href="{{ x.grocerist_id }}.html">{{ x.name }}</a></dd>
                <dt>Religion</dt>
                {% for y in x.religion %}
                <dd class="ms-5">{{ y.value }}</dd>
                {% endfor %}
                <dt>Status</dt>
                <dd class="ms-5">{{ object.status_of_main_person.value }}</dd>
                <dt>Type of ownership</dt>
                <dd class="ms-5">{{ object.type_of_ownership.value }}</dd>
            </dl>
            {% endfor %}

            <h2><i class="bi bi-people"></i> Further mentioned people</h2>
            {% for x in object.mentioned_persons %}
            <dl>
                <dt>Role/Name</dt>
                <dd class="ms-5">{{ x.value }}</dd>
            </dl>
            {% endfor %}

            <h2><i class="bi bi-basket"></i> Groceries</h2>
            {% for x in object.goods %}
            <dt><a href="{{ x.grocerist_id }}.html">{{ x.name }}</a></dt>
            <dd class="ms-5">
                {% for y in x.has_category %}
                <a href="category__{{ y.id }}.html"><span class="badge text-bg-primary">{{y.value}}</span></a>
                {% endfor %}

            </dd>
            {% endfor %}
        </div>
        <div class="col">
            {% if images %}
            <div class="pb-3">
                <h2 class="text-center"><i class="bi bi-images"></i> Facsimiles</h2>
                <div id="openseadragon1" style="width: 600px; height: 800px;"></div>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/openseadragon/4.1.0/openseadragon.min.js"></script>
                <script type="text/javascript">
                    var viewer = OpenSeadragon({
                        id: "openseadragon1",
                        sequenceMode: true,
                        prefixUrl: "https://cdnjs.cloudflare.com/ajax/libs/openseadragon/4.1.0/images/",
                        tileSources: {{ images }}
                });
                </script>
            </div>
            {% endif %}
            <h2 class="text-center"><i class="bi bi-pencil"></i> Transcript</h2>
            {% for x in paragraphs %}
            {{ x|safe }}
            {% endfor %}
        </div>
    </div>
</div>


{% endblock content %}