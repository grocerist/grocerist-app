{% extends "templates/partials/base.j2" %}
{% block title %}Browse Persons{% endblock title %}
{% block page_description %}
<meta name="description" content="{{ project_data.project_sub_title }}">
{% endblock page_description %}

{% block scriptHeader %}
{% include "templates/partials/tabulator.j2" %}
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>

{% endblock scriptHeader %}
{% block content %}
<div class="container">
    <h1 class="text-center">
        {% include "templates/partials/link_to_top.j2" %}
        Persons</h1>
    <div class="row">
        <div class="col-md-6">
            <div id="religion-chart"></div>
        </div>
        <div class="col-md-6">
            <select class="form-select" id="select-location">
                <option value="district">Districts</option>
                <option value="neighbourhood">Mahalles</option>
                <option value="karye">Karyes</option>
                <option value="nahiye">Nahiyes</option>
                <option value="quarter">Quarters</option>
            </select>
            <div id="location-chart"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="persons-table"></div>
        </div>
    </div>

</div>
{% endblock content %}

{% block scripts2 %}
<script src="js/persons.js"></script>
{% endblock scripts2 %}