{% set page_title = "Grocers" %}
{% set tabulator_css = True %}
{% extends "templates/partials/base.j2" %}
{% block title %}Browse {{page_title}}{% endblock title %}
{% block page_description %}
<meta name="description" content="{{ project_data.project_sub_title }}">
{% endblock page_description %}

{% block content %}
{% include "templates/partials/breadcrumbs.j2" %}
<div class="container">
    <h1 class="text-center">
        {{page_title}}</h1>
    <div class="row p-2">
        <div class="col-12 col-md-6 d-flex justify-content-center">
            <div class="w-100" id="religion-chart"></div>
        </div>
        <div class="col-12 col-md-6 d-flex justify-content-center">
            <div class="w-100" id="districts-chart"></div>
        </div>
        <div class="row">
            <div class="col">
                <div id="persons-table"></div>
                <div class="d-flex justify-content-end mt-2">
                    {% include "templates/partials/tabulator_dl_buttons.j2" %}
                </div>
            </div>
        </div>

    </div>
    {% endblock content %}

    {% block scripts2 %}
    {% include "templates/partials/tabulator.j2" %}
    {% include "templates/partials/highcharts.j2" %}
    <script src="js/persons.js"></script>
    {% endblock scripts2 %}